/* pages/manager/index.wxss */

@import "../../common/lib/weui.wxss"

page{
  height:100%;
  background-color:#EEEEEE;
}

.bd-cells{
	position: relative;
  line-height: 1.41176471;
  font-size: 17px;
  padding-top: 15px; 
  padding-right: 15px; 
  padding-left: 10px; 
  padding-bottom: 5px;
}

.bd-cell{
	padding: 10px 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
          
  border-radius: 8px;
  background: white;    
  margin-bottom:10px;      
}

.bd-mg-cell-panel{
	background: white;
	border-radius: 15px;
	padding-top: 3px;
	padding-bottom: 3px;
	padding-left: 10px;
	padding-right: 10px;
	margin-right: 10px;
	width: 100%;
}

.safe{
  padding-left: 3px; 
  color:orange; 
  font-size:14px; 
  align-content: center;
}

.pd-1l-ctrl{
	display: flex;
}

.pd-1l-ctrl-item{
	margin-left: 20px;
	width: 22px;
	height: 22px;
}

.pd-1l-ctrl-item:first-child{
	margin-left: 0px;
}