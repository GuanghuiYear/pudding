<view class="">
  <view class="item-list flex-column bgw">
    <view class="item-cells flex-row item-line">
      <text>选择用户</text>
    </view>
    <view class="item-cells flex-row item-line">
      <image src='/images/user_del@2x.png' class="user_del" bindtap='removeUser'></image>
      <text>梁朝伟</text>
    </view>
    <view class="item-cells flex-row item-line">
      <image src='/images/user_del@2x.png' class="user_del" bindtap='removeUser'></image>
      <text>梁朝伟</text>
    </view>
  </view>

  <form>
    <view class="item-list flex-column bgw martb">
      <view class="item-cells flex-row item-line f-just-bet">
        <text>选择日期</text>
      </view>
      <view class="item-cells flex-row item-line f-just-bet">
        <text>起始时间</text>
        <view class="date">
          <picker mode="date" value="{{date_start}}" start="2015-09-01 12:00" end="2017-09-01 12:00" bindchange="bindDateChange_start">
            <view class="picker">{{date_start}}bindDateChange_start</view>
          </picker>
        </view>
      </view>
      <view class="item-cells flex-row item-line f-just-bet">
        <text>结束时间</text>
        <view class="flex-row">
          <view class="date">
            <picker mode="date" value="{{date_end}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange_end">
              <view class="picker">{{date_end}}</view>
            </picker>
          </view>
          <view class="time">
            <picker mode="time" value="{{time_end}}" start="09:01" end="21:01" bindchange="bindTimeChange">
              <view class="picker">{{time_end}}</view>
            </picker>
          </view>
        </view>
      </view>
    </view>
    <button class="btn btn-reset btn-bggreen">查询</button>
  </form>


  
</view>